{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "next"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal"],
        "pathGroups":[
          {
            "pattern": "next/**",
            "group": "builtin",
            "position": "before"
          },
          {
          "pattern": "react",
          "group": "builtin",
          "position": "before"
        }],
        "pathGroupsExcludedImportTypes": ["react", "next"],
        "newlines-between": "always-and-inside-groups",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "no-unused-vars": ["warn"],
    "no-extra-boolean-cast": "off"
  }
}
